{
  "scripts": {
    "start": "node ./src/server.js",
    "dev": "nodemon ./src/server.js",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:reset": "npx sequelize-cli db:seed:undo:all && npx sequelize-cli db:migrate:undo:all",
    "db:restore": "npm run db:migrate && npm run db:seed",
    "test:unit:dev": "NODE_ENV=development jest --watchAll --detectOpenHandles",
    "test:unit": "mocha tests/unit/**/*.js",
    "test:integration": "mocha tests/integration/**/*.js",
    "test": "jest"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "sequelize": "^6.35.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "chai": "^4.3.10",
    "chai-http": "^4.4.0",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.2",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0"
  }
}
